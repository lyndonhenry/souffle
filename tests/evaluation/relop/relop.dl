//
// Relational Algebra Operations
//
// Datalog Formulation

// Relations

.type Node

.decl a  (node1:Node)
.input a  ()
.output a  ()
.decl b  (node1:Node)
.input b  ()
.output b  ()
.decl c  (node1:Node, node2:Node)
.input c  ()
.output c  ()
.decl projection  (node1:Node)
.output projection  ()
.decl cartesian   (node1:Node, node2:Node)
.output cartesian   ()
.decl inner_join  (node1:Node)
.output inner_join  ()

// (Extended) Relational Algebra Operations

// pi(X)(c(X,Y)) : Projection of the first argument of c
projection(X) :- c(X,_).

// a x b : Cartesian product of relations a and b
cartesian(X,Y) :- a(X), b(Y).

// a |x| b : Natural inner join of relations a and b
inner_join(X) :- a(X), b(X).


